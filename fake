<div class="mdui-col-xs-12 mdui-col-md-6">
                    <div class="mdui-card">

                        <!-- 卡片的标题和副标题 -->
                        <div class="mdui-card-primary">
                            <div class="mdui-card-primary-title">犇犇区</div>
                            <div class="mdui-card-primary-subtitle">尽情摸鱼～</div>
                        </div>

                        <!-- 卡片的内容 -->
                        <div class="mdui-card-content" id="benben">
                            <div class="mdui-spinner mdui-spinner-colorful"></div>
                        </div>

                        <!-- 卡片的按钮 -->
                        <div class="mdui-card-actions">
                            <div class="mdui-container">
                                <div class="mdui-textfield">
                                    <input class="mdui-textfield-input" type="text" placeholder="按回车键发送" id="ib" />
                                </div>
                            </div>
                        </div>
                        <script>
                            function send_benben() {
                                var text = document.getElementById("ib").value;
                                if (text == "") {
                                    mdui.snackbar("请输入内容");
                                    return;
                                }
                                fetch("https://api.oiso.cf:8443/msg?msg=" + text, {
                                    credentials: 'include'
                                }).then(function (response) {
                                    return response.text();
                                }).then(function (data) {
                                    console.log(data);
                                    if (data == "True") {
                                        mdui.snackbar("发送成功！");
                                        document.getElementById("ib").value = "";
                                    } else {
                                        mdui.snackbar("发送失败……");
                                    }
                                }).catch(function () {
                                    mdui.snackbar("发送失败……");
                                });
                            }
                            document.getElementById("ib").addEventListener("keyup", function (event) {
                                // console.log(event);
                                if (event.keyCode === 13) {
                                    event.preventDefault();
                                    send_benben();
                                }
                            });
                        </script>
                    </div>
                </div>
                <div class="mdui-col-xs-12 mdui-col-md-6">
                    <div class="mdui-panel" mdui-panel="{accordion: true}">
