                                    <iframe scrolling="no" border="0" frameborder="no" framespacing="0" allowfullscreen="true" src="https://player.bilibili.com/player.html?bvid=BV1GJ411x7h7&amp;high_quality=1" style="position: sticky;top: 0; left: 0; width: 100%; height: 100%;"></iframe>
                                    
                                </div>
                        </div>
                        <script>
                            // add listener opened.mdui.panel
                            document.getElementById('bili').addEventListener('opened.mdui.panel', function () {
                                // console.log('opened');
                                document.getElementById("bili").style.height = "533px";
                                document.getElementById("bilibody").style.height = "433px";
                            });
                            // add listener closed.mdui.panel
                            document.getElementById('bili').addEventListener('closed.mdui.panel', function () {
                                // console.log('closed');
                                document.getElementById("bili").removeAttribute("style");
                                document.getElementById("bilibody").removeAttribute("style");
                                document.getElementById("bilibody").innerHTML='';
                            });
                        </script>
                    </div>
